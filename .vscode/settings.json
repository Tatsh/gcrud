{
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 4
  },
  "[cmake]": {
    "editor.defaultFormatter": "cheshirekow.cmake-format"
  },
  "cSpell.ignoreWords": [
    "alloc",
    "build",
    "calloc",
    "cpath",
    "dcmake",
    "gboolean",
    "gchar",
    "gcrud",
    "gint",
    "gmock",
    "gshadow",
    "gtest",
    "iwyu",
    "logv",
    "makefiles",
    "memcheck",
    "parens",
    "pdir",
    "pseudofs",
    "strdup",
    "strfreev",
    "type",
    "udev",
    "unref",
    "valgrind"
  ],
  "cmake.configureOnOpen": true,
  "editor.formatOnSave": true
}
